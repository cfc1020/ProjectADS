  <div class="navbar-inner">
    <%= link_to 'Home', root_path, class: "brand" %>
    <ul class="nav">
      <% if user_signed_in? %>
      	<li class="divider-vertical">
          <%= link_to "Hi, #{current_user.email}", user_root_path %> 
        </li> 
        <li class="divider-vertical">
          <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
