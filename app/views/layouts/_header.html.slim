header.navbar
  .navbar-inner
    = link_to 'Home', root_path, class: "brand"
    ul.nav
      - if user_signed_in?
        li.divider-vertical
          = link_to "Hi, #{current_user.email}", user_root_path
        li.divider-vertical
          = link_to 'Выйти', destroy_user_session_path, :method => :delete
        li.divider-vertical
          = link_to 'New', new_ad_path
        li.divider-vertical
          = link_to 'Adminka', admin_root_path if can? :set_role, User
        li.divider-vertical
          = link_to 'Edit my profile', edit_user_registration_path
      - else
        li.divider-vertical
          = link_to 'Sign in', new_user_session_path
        li.divider-vertical
          = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
        li.divider-vertical
          = link_to 'Sign up', new_user_registration_path
