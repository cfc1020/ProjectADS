<h1>Ads#index</h1>
<p>Find me in app/views/ads/index.html.erb</p>

<%= will_paginate @ads %>

<% @ads.each do |ads| %>
	<p>
		UserName:
		<%= ads.user.name %> <br />
		ContentAd:
		<%= ads.content   %>
		<%= link_to "Bla-bla-bla", '/'if can? :edit, ads %> <br />
		<%= ads.type %> <br />
		<% ads.pictures.each do |pic| %>
  			<%= image_tag(pic.url) %>
		<% end %>
	</p>
<% end %>
